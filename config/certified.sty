%%                           Body                           %%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\newcommand{\printcorpo}[4]{
    \condicoes{#1}
    \begin{center}\resizebox{!}{10mm}
        {\sc \MakeUppercase \@typetitle}
    \end{center}
    
    \vskip .5cm
    
    \hskip 10pt
    \begin{center}
        \begin{minipage}{.8\textwidth}
        	\scalefont{1.5}
    		\printtextomini{#2}{#3}{\@emittername }%
		    {\@university}{#4}{\@eventdate}
        \end{minipage}
    \end{center}
    
    \vspace{3em}
    
    \hfill
    \begin{minipage}{.4\textwidth}
        \scalefont{1.5}
        \@location, \today
    \end{minipage}
}

